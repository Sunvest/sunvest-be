# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/solar-investment

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Email Configuration (SMTP)
EMAIL_FROM=your-gmail@gmail.com
EMAIL_FROM_NAME=Solar Investment Platform
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-16-character-app-password

# Firebase Configuration
# Set to "true" to use a JSON file for Firebase credentials, "false" to use env vars
FIREBASE_USE_JSON_FILE=false
# If using a JSON file, specify the path (default is firebase-service-account.json in root)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# If not using a JSON file, provide these environment variables
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@example.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Enable Firebase Phone Verification (set to "true" to enable real SMS, "false" for mock mode)
FIREBASE_PHONE_VERIFICATION_ENABLED=false 